<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--상단바-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/cart_iv_btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_gravity="center|left"
                android:layout_marginLeft="30dp"
                app:tint="@color/black"
                android:clickable="true"
                />
        </FrameLayout>
        <!--밑줄 선-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A8A8A8"
            />

<!--        버튼-->
        <TextView
            android:id="@+id/cart_tv_btn_all"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/cart_button_shape_bgwhite"
            android:text="상품 전체 선택"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:clickable="true"
            />
        <ListView
            android:id="@+id/cart_lv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

<!--    bottom-->
    <LinearLayout
        android:id="@+id/cart_layout_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="30dp"
        android:paddingTop="30dp"

        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="총 건수"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/cart_tv_total_count"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="3개"
                android:textColor="@color/black"
                android:gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="총 금액"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/cart_tv_total_price"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="3,000원"
                android:textColor="@color/black"
                android:gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/cart_tv_btn_delete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="삭제하기"
                android:textColor="@color/purple_700"
                android:gravity="center"
                android:background="@drawable/cart_button_shape_bgwhite"
                android:layout_marginRight="10dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/cart_tv_btn_deal"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="주문하기"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/cart_button_shape_bgpurple"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>