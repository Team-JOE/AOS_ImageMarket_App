<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserDelete">

    <!--상단바-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/profile_iv_user_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30dp"
            app:tint="@color/black"
            android:clickable="true"
            />
    </FrameLayout>
    <!--밑줄 선-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A8A8A8"
        />


    <LinearLayout
        android:id="@+id/cart_layout_noItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:paddingBottom="50dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_outline_priority_high_24"
            android:layout_marginVertical="10dp"
            app:tint="@color/purple_500"
            android:background="@drawable/deal_completed_bacground"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정말 회원 탈퇴하시겠습니까?"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24dp"
            android:paddingVertical="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴 후 가입 이력이 있는 이메일로는\n재가입할 수 없습니다."
            android:gravity="center"
            android:textColor="#333"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/profile_tv_user_delete"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:text="회원 탈퇴 하기"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/cart_button_shape_bgwhite"
            android:gravity="center"
            android:clickable="true"
            />

    </LinearLayout>

</LinearLayout>