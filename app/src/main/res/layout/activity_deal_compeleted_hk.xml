<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DealCompeletedActivityHK">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <!--상단바-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제완료"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/cart_iv_btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30dp"
            app:tint="@color/black"
            android:clickable="true"
            />
    </FrameLayout>
    <!--밑줄 선-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A8A8A8"
        />


        <LinearLayout
            android:id="@+id/cart_layout_noItem"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:paddingBottom="50dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                android:layout_marginVertical="10dp"
                app:tint="@color/purple_700"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제가 정상적으로 완료 되었습니다!"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:paddingVertical="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미지는 주문 목록에서 다운로드 할 수 있습니다."
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/cart_tv_btn_go_to_image"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:text="주문 목록으로 바로가기"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@drawable/cart_button_shape_bgwhite"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>